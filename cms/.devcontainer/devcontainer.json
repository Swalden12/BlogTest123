{
    "name": "PHP Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "felixfbecker.php-debug",
                "bmewburn.vscode-intelephense-client"
            ]
        }
    },
    "forwardPorts": [
        80
    ],
    "postCreateCommand": "composer install",
    "remoteUser": "vscode"
}
